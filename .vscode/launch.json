  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Deno debug",
      "type": "node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "env": {
        "DENO_FUTURE": "1"
      },
      "runtimeExecutable": "/Users/micurs/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229,
      "internalConsoleOptions": "openOnSessionStart",
      "console": "integratedTerminal"
    }
  ]
}