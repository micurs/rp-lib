{
  "version": "0.0.1",
  "license": "MIT",
  "tasks": {
    "bundle": "cd lib && deno run --allow-all npm:vite build --config vite.config.ts",
    "test": "deno test --coverage && deno coverage",
    "cli-demo": "deno run cli-demo/main.ts",
    "react-demo": "deno run --allow-net --allow-read jsr:@std/http@1/file-server react-demo/dist/"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "workspace": ["./lib", "./cli-demo", "./react-signals"],
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "vite": "npm:vite",
    "vite-plugin-dts": "npm:vite-plugin-dts"
  },
  "nodeModulesDir": "auto"
}
